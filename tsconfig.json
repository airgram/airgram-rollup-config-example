{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "es6",
    "outDir": "dist",
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "./src"
  ]
}
